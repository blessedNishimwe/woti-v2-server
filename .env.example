# Application
NODE_ENV=development
PORT=3000
APP_NAME=WOTI Attendance v2

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=woti_attendance
DB_USER=postgres
DB_PASSWORD=your_password_here
DB_POOL_MIN=20
DB_POOL_MAX=100
DB_IDLE_TIMEOUT=10000
DB_CONNECTION_TIMEOUT=3000

# PgBouncer Configuration (optional)
PGBOUNCER_ENABLED=false
PGBOUNCER_HOST=localhost
PGBOUNCER_PORT=6432

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_change_this_in_production
JWT_EXPIRES_IN=24h
JWT_REFRESH_SECRET=your_super_secret_refresh_key_change_this_in_production
JWT_REFRESH_EXPIRES_IN=7d

# bcrypt Configuration
BCRYPT_ROUNDS=12

# CORS Configuration
CORS_ORIGIN=http://localhost:3001,http://localhost:19006
CORS_CREDENTIALS=true

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX_REQUESTS=5

# Logging
LOG_LEVEL=info
LOG_FILE=logs/app.log

# File Upload
UPLOAD_MAX_SIZE=10485760
UPLOAD_DIR=uploads

# Security
FORCE_HTTPS=false
SESSION_SECRET=your_session_secret_change_this_in_production

# Admin User (for seeding)
ADMIN_EMAIL=admin@woti.rw
ADMIN_PASSWORD=Admin@123
ADMIN_FIRSTNAME=System
ADMIN_LASTNAME=Administrator
